        ///
        ///
        ///
        {
            "label": "0. Install pipX",
            "type": "shell",
            "hide": true,
            "linux": {
                "command": "sudo apt-get -qq -y install pipx > /dev/null && pipx ensurepath"
            },
            "options": {
                "statusbar": {
                    "hide": true
                }
            },
            "problemMatcher": []
        },
        {
            "label": "1. Install kubespray requirements",
            "type": "shell",
            "dependsOn": "0. Install pipX",
            "command": "grep -vE '^\\s*(#|$)' requirements.txt | xargs -n 1 pipx install --include-deps",
            "options": {
                "statusbar": {
                    "hide": true
                }
            },
            "problemMatcher": []
        },
        {
            "label": "2. Install Ansible dev-tools",
            "type": "shell",
            "command": "pipx install ansible-dev-tools",
