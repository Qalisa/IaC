apiVersion: v1
kind: PersistentVolume
metadata:
  name: portainer
  labels:
    type: local
spec:
  storageClassName: "{{ iac__local_storage__class_name }}"
  capacity:
    storage: 10Gi 
  local:
    path: {{ iac__pv_path__portainer }}
  persistentVolumeReclaimPolicy: Retain
  accessModes:
    - ReadWriteOnce #
  nodeAffinity:
    required:
      nodeSelectorTerms:
        - matchExpressions:
          - key: kubernetes.io/hostname
            operator: In
            values:
              - {{ iac__master_node_name }}
              