apiVersion: v1
kind: Service
metadata:
  name: posthog-proxy
  namespace: "{{ k8s__posthog_proxy__namespace }}"
annotations:
  external-dns.alpha.kubernetes.io/cloudflare-proxied: "true"
  external-dns.alpha.kubernetes.io/hostname: "{{ k8s__posthog_proxy__external_hostname }}"
spec:
  type: ExternalName
  externalName: "{{ k8s__posthog_proxy__vhost }}"
---
apiVersion: v1
kind: Service
metadata:
  name: posthog-assets-proxy
  namespace: "{{ k8s__posthog_proxy__namespace }}"
spec:
  type: ExternalName
  externalName: "{{ k8s__posthog_proxy__vhost__assets }}"
