apiVersion: apps/v1
kind: Deployment
metadata:
  name: self-service-password
  namespace: openldap-stack
spec:
  selector:
    matchLabels:
      app: self-service-password
  template:
    metadata:
      labels:
        app: self-service-password
    spec:
      containers:
        - name: self-service-password
          image: ltbproject/self-service-password
          imagePullPolicy: IfNotPresent
          ports:
            - name: app
              containerPort: 80
              protocol: TCP
          volumeMounts:
            - name: app-config
              mountPath: /var/www/conf/config.inc.local.php
              subPath: config.inc.local.php
              readOnly: true
      restartPolicy: Always
      volumes:
        - name: app-config
          secret:
            secretName: self-service-password
            items:
            - key: ssp.conf.php
              path: config.inc.local.php