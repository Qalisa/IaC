apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: self-service-password
  namespace: "{{ openldap_stack__namespace }}"
  annotations:
    #
    external-dns.alpha.kubernetes.io/hostname: "{{ k8s__openldap__external_hostname__ssp }}"
    external-dns.alpha.kubernetes.io/cloudflare-proxied: "true"
    #
    ingress-dashboard/title: LDAP Password reset
    ingress-dashboard/description: Allows LDAP users to manager their passwords
    ingress-dashboard/logo-url: /images/favicon.ico
    ingress-dashboard/assume-tls: "true"
    ingress-dashboard/hide: "false"
spec:
  rules:
  - host: "{{ k8s__openldap__external_hostname__ssp }}"
    http:
      paths:
      - path: /
        pathType: Prefix
        backend:
          service: 
            name: self-service-password
            port:
              name: app