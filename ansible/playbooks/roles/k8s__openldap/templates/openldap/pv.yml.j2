apiVersion: v1
kind: PersistentVolume
metadata:
  name: openldap
  labels:
    type: local
spec:
  storageClassName: "{{ local_storage_class_name }}"
  capacity:
    storage: 8Gi 
  local:
    path: "{{ openldap_pv_path }}"
  persistentVolumeReclaimPolicy: Retain
  accessModes:
    - ReadWriteOnce #
  nodeAffinity:
    required:
      nodeSelectorTerms:
        - matchExpressions:
          - key: kubernetes.io/hostname
            operator: In
            values:
              - {{ master_node_name }}