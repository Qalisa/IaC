apiVersion: v1
kind: ConfigMap
metadata:
  name: registry-config
  namespace: kube-system
data:
  config.yml: |-
    health:
      storagedriver: {enabled: true, interval: 10s, threshold: 3}
    http:
      addr: :5000
      tls:
        certificate: /certs/ca.crt
        key: /certs/tls.key
      headers:
        X-Content-Type-Options: [nosniff]
    log:
      fields: {service: registry}
    storage:
      cache: {blobdescriptor: inmemory}
    version: 0.1