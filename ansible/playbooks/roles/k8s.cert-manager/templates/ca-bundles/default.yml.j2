apiVersion: trust.cert-manager.io/v1alpha1
kind: Bundle
metadata:
  name: trust-manager-ca
spec:
  sources:
    - useDefaultCAs: false
    - secret:
        name: root-secret
        key: ca.crt
  target:
    secret:
      key: ca-certificates.crt
    namespaceSelector:
      matchLabels:
        trust: enabled
