apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: "{{ k8s__listmonk__app_name }}"
  namespace: "{{ k8s__listmonk__namespace }}"
  annotations:
    #
    external-dns.alpha.kubernetes.io/hostname: {{ k8s__listmonk__external_hostnames | join(",") | quote }}
    external-dns.alpha.kubernetes.io/cloudflare-proxied: "true"
    #
    ingress-dashboard/title: Listmonk
    ingress-dashboard/description: Send email campagns 
    ingress-dashboard/logo-url: /favicon.ico
    ingress-dashboard/assume-tls: "true"
    ingress-dashboard/hide: "false"
spec:
  rules:
{% for host in k8s__listmonk__external_hostnames %}
    - host: "{{ host }}"
      http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service: 
                name: "{{ k8s__listmonk__app_name }}"
                port:
                  name: "{{ k8s__listmonk__app__port_name }}"
{% endfor %}