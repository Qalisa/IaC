apiVersion: v1
kind: Service
metadata:
  name: odoo
  namespace: "{{ k8s__odoo_community__namespace }}"
  labels:
    app: odoo
spec:
  type: ClusterIP
  selector:
    app: odoo
  ports:
    - name: http
      port: 80
      targetPort: http
      protocol: TCP
    - name: longpolling
      port: 8072
      protocol: TCP
      targetPort: longpolling
