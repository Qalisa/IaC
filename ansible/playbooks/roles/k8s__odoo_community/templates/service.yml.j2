apiVersion: v1
kind: Service
metadata:
  name: "{{ k8s__odoo_community__metadata_name }}"
  namespace: "{{ k8s__odoo_community__namespace }}"
  labels:
    app: "{{ k8s__odoo_community__app_selector_name }}"
spec:
  type: ClusterIP
  selector:
    app: "{{ k8s__odoo_community__app_selector_name }}"
  ports:
    - name: http
      port: 80
      targetPort: http
      protocol: TCP
    - name: longpolling
      port: 8072
      protocol: TCP
      targetPort: longpolling
