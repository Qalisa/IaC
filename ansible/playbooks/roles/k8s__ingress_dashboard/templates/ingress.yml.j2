apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: dashboard
  namespace: ingress-dashboard
  annotations:
    ingress-dashboard/title: URLs Book
    ingress-dashboard/description: Lists all websites available for {{ root_domain }}
    ingress-dashboard/logo-url: /favicon.ico
    ingress-dashboard/assume-tls: "true"
    ingress-dashboard/hide: "false"
    #
    external-dns.alpha.kubernetes.io/hostname: "{{ k8s__ingress_dashboard__external_hostname }}"
    external-dns.alpha.kubernetes.io/cloudflare-proxied: "true"
    #
    cloudflare-access/must-secure: "true"
spec:
  ingressClassName: "{{ ingress_nginx_class }}"
  rules:
    - host: "{{ k8s__ingress_dashboard__external_hostname }}"
      http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: dashboard
                port:
                  number: 8080