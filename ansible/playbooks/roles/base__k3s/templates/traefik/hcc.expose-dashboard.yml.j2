apiVersion: helm.cattle.io/v1
kind: HelmChartConfig
metadata:
  name: traefik
  namespace: "{{ base__k3s__default_namespace }}"
spec:
  valuesContent: |-
    additionalArguments:
      - "--api"
      - "--api.dashboard=true"
      - "--api.insecure=true"
    ports:
      traefik:
        expose:
            default: true
    providers:
      kubernetesCRD:
        allowCrossNamespace: true