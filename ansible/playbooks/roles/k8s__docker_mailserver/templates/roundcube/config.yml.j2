apiVersion: v1
kind: ConfigMap
metadata:
  name: roundcube
  namespace: "{{ docker_mailserver__namespace }}"
immutable: false
data:
  ROUNDCUBEMAIL_DB_TYPE: sqlite
  ROUNDCUBEMAIL_SKIN: elastic
  ROUNDCUBEMAIL_DEFAULT_HOST: "tls://{{ k8s__docker_mailserver__internal_hostname }}" # secure connection required
  ROUNDCUBEMAIL_SMTP_SERVER: "tls://{{ k8s__docker_mailserver__internal_hostname }}" # secure connection required