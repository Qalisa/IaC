apiVersion: v1
kind: PersistentVolume
metadata:
  name: roundcube
  labels:
    type: local
spec:
  storageClassName: "{{ iac__local_storage__class_name }}"
  capacity:
    storage: 5Gi 
  local:
    path: "{{ iac__pv_path__roundcube }}"
  persistentVolumeReclaimPolicy: Retain
  accessModes:
    - ReadWriteOnce #
  nodeAffinity:
    required:
      nodeSelectorTerms:
        - matchExpressions:
          - key: kubernetes.io/hostname
            operator: In
            values:
              - "{{ iac__master_node_name }}"
---
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: roundcube
  namespace: "{{ docker_mailserver__namespace }}"
spec:
  storageClassName: "{{ iac__local_storage__class_name }}"
  accessModes:
    - ReadWriteOnce
  resources:
    requests:
      storage: 5Gi