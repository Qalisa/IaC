apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: roundcube
  namespace: docker-mailserver
  annotations:
    # when using Cloudflare's proxied DNS record
    nginx.ingress.kubernetes.io/ssl-redirect: "false"
    cert-manager.io/cluster-issuer: "{{ cert_manager__org_ca__name }}"
    nginx.ingress.kubernetes.io/backend-protocol: "HTTP"
    nginx.ingress.kubernetes.io/rewrite-target: /
      #
    ingress-dashboard/title: Roundcube
    ingress-dashboard/description: Embedded UI to access {{ iac__root_domain }} emails
    ingress-dashboard/logo-url: /favicon.ico
    ingress-dashboard/assume-tls: "true"
    ingress-dashboard/hide: "false"
spec:
  ingressClassName: "{{ iac__ingress_nginx_class }}"
  rules:
  - host: "web{{ docker_mailserver__external_hostname }}"
    http:
      paths:
      - path: /
        pathType: Prefix
        backend:
          service: 
            name: roundcube
            port:
              name: app