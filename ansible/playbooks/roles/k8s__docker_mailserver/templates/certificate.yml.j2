---
apiVersion: cert-manager.io/v1
kind: Certificate
metadata:
  name: "{{ docker_mailserver__server_hostname }}"
  namespace: "{{ docker_mailserver__namespace }}"
spec:
  secretName: "{{ k8s__docker_mailserver__cert_secret_name }}"
  isCA: false
  privateKey:
    algorithm: RSA
    encoding: PKCS1
    size: 2048
  dnsNames:
    - {{ docker_mailserver__external_hostname }}
    - {{ k8s__docker_mailserver__external_hostname__autoconfig }}
    - {{ k8s__docker_mailserver__external_hostname__autodiscover }}
  issuerRef:
    name: "{{ iac__unproxied_certificate_issuer }}" # cannot be proxied by Cloudflare, letsencrypt or ZeroSSL required
    kind: ClusterIssuer