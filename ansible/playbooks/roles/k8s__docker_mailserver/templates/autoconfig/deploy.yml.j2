apiVersion: apps/v1
kind: Deployment
metadata:
  name: docker-mailserver-autoconfig
  namespace: docker-mailserver
spec:
  selector:
    matchLabels:
      app: docker-mailserver-autoconfig
  template:
    metadata:
      labels:
        app: docker-mailserver-autoconfig
    spec:
      containers:
        - name: docker-mailserver-autoconfig
          image: monogramm/autodiscover-email-settings:latest
          imagePullPolicy: IfNotPresent
          ports:
            - name: manifest-app
              containerPort: 8000
              protocol: TCP
          envFrom:
            - configMapRef:
                name: docker-mailserver-autoconfig
      restartPolicy: Always