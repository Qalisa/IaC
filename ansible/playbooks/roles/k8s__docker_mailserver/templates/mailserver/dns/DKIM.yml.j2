apiVersion: externaldns.k8s.io/v1alpha1
kind: DNSEndpoint
metadata:
  name: DKIM
  namespace: "{{ docker_mailserver__namespace }}"
spec:
  endpoints:
    - dnsName: "{{ docker_mailserver__third_level_domain }}._domainkey"
      recordTTL: 1                # 1 is the "Auto" TTL value for Cloudflare
      recordType: TXT
      targets:
        - "{{ dkim_txt }}"