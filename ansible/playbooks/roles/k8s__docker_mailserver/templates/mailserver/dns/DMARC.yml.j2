apiVersion: externaldns.k8s.io/v1alpha1
kind: DNSEndpoint
metadata:
  name: dmarc-entries
  namespace: "{{ docker_mailserver__namespace }}"
spec:
  endpoints:
    - dnsName: _dmarc
      recordTTL: 1                # 1 is the "Auto" TTL value for Cloudflare
      recordType: TXT
      targets:
        - v=DMARC1; p=quarantine; ruf=mailto:{{ iac__postmaster_email }}; sp=none; fo=1; ri=86400