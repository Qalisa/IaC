apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: "{{ docker_mailserver__server_hostname }}-autodiscover"
  namespace: "{{ docker_mailserver__namespace }}"
  annotations:
    #
    external-dns.alpha.kubernetes.io/hostname: "{{ k8s__docker_mailserver__external_hostname__autodiscover }}"
    external-dns.alpha.kubernetes.io/cloudflare-proxied: "false"
    #
    ingress-dashboard/title: E-mail autodiscover
    ingress-dashboard/description: Allows automatic configuration of {{ iac__root_domain }} mails on most email clients
    ingress-dashboard/logo-url: /favicon.ico
    ingress-dashboard/assume-tls: "true"
    ingress-dashboard/hide: "true" # hide, let autoconfig.<iac__root_domain> book entry be upfront
spec:
  ingressClassName: "{{ iac__ingress_class_name }}"
  tls:
    - secretName: "{{ k8s__docker_mailserver__cert_secret_name }}"
      hosts:
        - "{{ k8s__docker_mailserver__external_hostname__autodiscover }}"
  rules:
    - host: "{{ k8s__docker_mailserver__external_hostname__autodiscover }}"
      http:
        paths:
        - path: /
          pathType: Prefix
          backend:
            service: 
              name: "{{ docker_mailserver__server_hostname }}-discover-autoconfig"
              port:
                name: manifest-app