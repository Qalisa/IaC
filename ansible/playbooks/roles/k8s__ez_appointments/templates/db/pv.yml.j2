apiVersion: v1
kind: PersistentVolume
metadata:
  name: "{{ k8s__ez_appointments__db__name }}"
  labels:
    type: local
spec:
  storageClassName: "{{ iac__local_storage__class_name }}"
  capacity:
    storage: 2Gi 
  local:
    path: "{{ iac__pv_path__ez_appointments }}"
  persistentVolumeReclaimPolicy: Retain
  accessModes:
    - ReadWriteOnce #
  nodeAffinity:
    required:
      nodeSelectorTerms:
        - matchExpressions:
          - key: kubernetes.io/hostname
            operator: In
            values:
              - "{{ iac__master_node_name }}"
---
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: "{{ k8s__ez_appointments__db__name }}"
  namespace: "{{ k8s__ez_appointments__namespace }}"
spec:
  storageClassName: "{{ iac__local_storage__class_name }}"
  accessModes:
    - ReadWriteOnce
  resources:
    requests:
      storage: 2Gi