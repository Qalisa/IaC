apiVersion: v1
kind: ConfigMap
metadata:
  name: "{{ k8s__ez_appointments__app__name }}"
  namespace: "{{ k8s__ez_appointments__namespace }}"
data:
  BASE_URL: https://{{ k8s__ez_appointments__external_hostname }}
  DB_HOST: "{{ k8s__ez_appointments__db__name }}.{{ k8s__ez_appointments__namespace }}"
  LANGUAGE: french
  DEBUG_MODE: "TRUE"
---
