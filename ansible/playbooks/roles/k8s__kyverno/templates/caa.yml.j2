apiVersion: cloudflare.zelic.io/v1alpha1
kind: CloudflareAccessApplication
metadata:
  name: "{{ k8s__kyverno__external_hostname__policy_reporter }}"
  namespace: kyverno
  annotations:
    # (optional) default: "false"
    #   ensures that the resource isn't removed from cloudflare if the CR is deleted
    cloudflare.zelic.io/prevent-destroy: "false"
spec:
  name: "{{ k8s__kyverno__external_hostname__policy_reporter }}"
  domain: "{{ k8s__kyverno__external_hostname__policy_reporter }}"
  autoRedirectToIdentity: true
  policies: 
    - name: Allow my rules
      decision: allow
      include:
        - accessGroups:
          - value: "accessgroup-root-domain"