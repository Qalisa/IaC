apiVersion: v1
kind: PersistentVolume
metadata:
  name: matomo-db
  labels:
    type: local
    name: matomo-db
spec:
  storageClassName: "{{ iac__local_storage__class_name }}"
  capacity:
    storage: 8Gi 
  local:
    path: "{{ iac__pv_path__matomo__db }}"
  persistentVolumeReclaimPolicy: Retain
  accessModes:
    - ReadWriteOnce #
  nodeAffinity:
    required:
      nodeSelectorTerms:
        - matchExpressions:
          - key: kubernetes.io/hostname
            operator: In
            values:
              - "{{ iac__master_node_name }}"
