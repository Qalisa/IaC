apiVersion: v1
kind: PersistentVolume
metadata:
  name: prometheus-server
  labels:
    type: local
spec:
  storageClassName: "{{ local_storage_class_name }}"
  capacity:
    storage: "{{ prometheus_server_pv_size }}" 
  local:
    path: "{{ prometheus_pv_path }}/{{ prometheus_server_pv_subpath }}"
  persistentVolumeReclaimPolicy: Retain
  accessModes:
    - ReadWriteOnce #
  nodeAffinity:
    required:
      nodeSelectorTerms:
        - matchExpressions:
          - key: kubernetes.io/hostname
            operator: In
            values:
              - {{ master_node_name }}
