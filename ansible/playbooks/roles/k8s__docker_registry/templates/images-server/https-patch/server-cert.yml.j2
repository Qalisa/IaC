apiVersion: cert-manager.io/v1
kind: Certificate
metadata:
  name: "{{ k8s__docker_registry__cert_secret_name }}"
  namespace: "{{ docker_registry__namespace }}"
spec:
  secretName: "{{ k8s__docker_registry__cert_secret_name }}"
  duration: 24h
  renewBefore: 12h
  issuerRef:
    name: "{{ cert_manager__org_ca__name }}"
    kind: ClusterIssuer
  commonName: "{{ cert_manager__org_ca__name }}'s org private image registry"
  dnsNames:
    - "{{ docker_registry__internal_hostname }}"