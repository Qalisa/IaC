---
apiVersion: cert-manager.io/v1
kind: Certificate
metadata:
  name: "{{ k8s__docker_registry__cert_name }}"
  namespace: "{{ docker_registry__namespace }}"
spec:
  secretName: "{{ k8s__docker_registry__cert_secret_name }}"
  isCA: false
  privateKey:
    algorithm: RSA
    encoding: PKCS1
    size: 2048
  dnsNames:
    - {{ k8s__docker_registry__external_hostname__images_server }}
  issuerRef:
    name: "{{ iac__unproxied_certificate_issuer }}" # cannot be proxied by Cloudflare, letsencrypt or ZeroSSL required
    kind: ClusterIssuer