apiVersion: v1
kind: ConfigMap
metadata:
  name: docker-mailserver-autoconfig
  namespace: docker-mailserver
immutable: false
data:
    COMPANY_NAME: {{ root_domain }}
    SUPPORT_URL: "https://{{ autodiscover_fqdn }}"
    DOMAIN: {{ root_domain }}
    # IMAP configuration (host mandatory to enable)
    IMAP_HOST: "{{ docker_mailserver_host }}"
    IMAP_PORT: '143'
    IMAP_SOCKET: STARTTLS
    # SMTP configuration (host mandatory to enable)
    SMTP_HOST: "{{ docker_mailserver_host }}"
    SMTP_PORT: '587'
    SMTP_SOCKET: STARTTLS