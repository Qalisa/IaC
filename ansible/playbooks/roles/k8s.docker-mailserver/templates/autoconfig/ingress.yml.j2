apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: docker-mailserver-autoconfig
  namespace: docker-mailserver
  annotations:
    # when using Cloudflare's proxied DNS record
    nginx.ingress.kubernetes.io/ssl-redirect: "false"
    cert-manager.io/cluster-issuer: "{{ cluster_issuer_name }}" # "selfsigned"
    nginx.ingress.kubernetes.io/backend-protocol: "HTTP"
spec:
  ingressClassName: "{{ ingress_nginx_class }}"
  tls:
  - hosts:
      - "*.{{ root_domain }}"
    secretName: nw-wildcard-certs
    #  - {{ autoconfig_fqdn }}
    #  - {{ autodiscover_fqdn }}
    # secretName: docker-mailserver-autoconfig-certs
  rules:
  - host: {{ autoconfig_fqdn }}
    http:
      paths:
      - path: /
        pathType: Prefix
        backend:
          service: 
            name: docker-mailserver-autoconfig
            port:
              number: 8000
  - host: {{ autodiscover_fqdn }}
    http:
      paths:
      - path: /
        pathType: Prefix
        backend:
          service: 
            name: docker-mailserver-autoconfig
            port:
              number: 8000