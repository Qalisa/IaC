apiVersion: apps/v1
kind: Deployment
metadata:
  name: roundcube
  namespace: docker-mailserver
spec:
  selector:
    matchLabels:
      app: roundcube
  template:
    metadata:
      labels:
        app: roundcube
    spec:
      containers:
        - name: roundcubemail
          image: roundcube/roundcubemail:latest
          imagePullPolicy: IfNotPresent
          volumeMounts:
            - name: data
              mountPath: /var/www/html
              subPath: www
              readOnly: false
            - name: data
              mountPath: /var/roundcube/config
              subPath: config
              readOnly: false
            - name: data
              mountPath: /var/roundcube/db
              subpath: db
              readOnly: false
          ports:
            - name: app
              containerPort: 80
              protocol: TCP
          envFrom:
            - configMapRef:
                name: roundcube
      restartPolicy: Always
      volumes:
        - name: data
          persistentVolumeClaim:
            claimName: roundcube