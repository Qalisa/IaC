apiVersion: v1
kind: PersistentVolume
metadata:
  name: roundcube
  labels:
    type: local
spec:
  storageClassName: "{{ storage_class_name }}"
  capacity:
    storage: 5Gi 
  local:
    path: {{ roundcube_pv_path }}
  persistentVolumeReclaimPolicy: Retain
  accessModes:
    - ReadWriteOnce #
  nodeAffinity:
    required:
      nodeSelectorTerms:
        - matchExpressions:
          - key: kubernetes.io/hostname
            operator: In
            values:
              - {{ master_node_name }}
---
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: roundcube
  namespace: docker-mailserver
spec:
  storageClassName: {{ storage_class_name }}
  accessModes:
    - ReadWriteOnce
  resources:
    requests:
      storage: 5Gi