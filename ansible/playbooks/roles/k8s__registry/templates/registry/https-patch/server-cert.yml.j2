apiVersion: cert-manager.io/v1
kind: Certificate
metadata:
  name: "{{ k8s__registry_cert_secret_name }}"
  namespace: kube-system
spec:
  secretName: "{{ k8s__registry_cert_secret_name }}"
  duration: 24h
  renewBefore: 12h
  issuerRef:
    name: "{{ cert_manager__org_ca__name }}"
    kind: ClusterIssuer
  commonName: "{{ cert_manager__org_ca__name }}'s org private image registry"
  dnsNames:
    - "{{ registry__hostname }}"