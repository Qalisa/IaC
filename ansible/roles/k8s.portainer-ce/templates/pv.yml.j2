apiVersion: v1
kind: PersistentVolume
metadata:
  name: k8s-default-store
  labels:
    type: local
spec:
  storageClassName: "{{ storage_class_name }}"
  capacity:
    storage: 1Gi 
  local:
    path: /data/k8s-default-store
  persistentVolumeReclaimPolicy: Retain
  accessModes:
    - ReadWriteOnce #
  nodeAffinity:
    required:
      nodeSelectorTerms:
        - matchExpressions:
          - key: kubernetes.io/hostname
            operator: In
            values:
              - {{ master_node_name }}